= link_to t('account.trips'), root_path, :class => 'brand'
%ul.nav
  - if user_signed_in?
    %li.dropdown
      %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
        = t('account.my_trips')
        %b.caret
      %ul.dropdown-menu
        %li
          = link_to t('account.trips'), account_trips_url
        %li
          = link_to t('account.tracks'), account_tracks_url

%ul.nav.pull-right
  - if user_signed_in?
    %li.dropdown
      %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
        = current_user.email
        %b.caret
      %ul.dropdown-menu
        %li
          = link_to t('account.edit'), edit_user_registration_path
        %li
          = link_to t('helpers.links.sign_out'), destroy_user_session_path, :method=>'delete'
  - else
    %li.dropdown
      %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
        = t 'helpers.links.sign_in'
        %b.caret
      %ul.dropdown-menu
        %li
          = link_to t('helpers.links.sign_in'), new_user_session_path
        %li
          = link_to t('helpers.links.sign_up'), new_user_registration_path