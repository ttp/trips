%h3= title t('account.tracks', :default => "Tracks")

= link_to t('account.new_track', :default => t("helpers.links.new")), new_account_track_path, :class => 'btn btn-primary'

%table.table.table-striped
  %thead
    %tr
      = sortable_header("id", '#')
      = sortable_header("name", t("account.track.name"))
      = sortable_header("region", t("region.region"))
      %th= t("helpers.actions")
  %tbody
    - @tracks.each do |track|
      %tr
        %td= track.id
        %td= track.name
        %td= t(track.region.name, :scope => 'region')
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_account_track_path(track), :class => 'btn btn-mini'
          = link_to t('helpers.links.destroy'), account_track_path(track),
            :method => :delete, :data => { :confirm => t('helpers.links.confirm')}, :class => 'btn btn-mini btn-danger'

= will_paginate @tracks