= javascript_include_tag "tracks"
= javascript_include_tag "init/textile_init"

= simple_form_for [:account, @track], :html => { :class => 'row col-md-9' } do |f|
  = hidden_field_tag :back_url, params[:back_url] || request.referer

  = f.input :name, :label => t('account.track.name')
  = f.input :region_id, :collection => Region.sorted, :label_method => :t, :label => t('region.region')
  = f.input :track, input_html: {:rows => 5}, :label => t('account.track.track')
  = f.input :description, input_html: {:rows => 10, :class => 'textile'}, :label => t('account.track.description')
  = f.input :url, :label => t('account.track.url')
  .form-actions
    = f.button :submit, :value => t('helpers.links.save'), :class => 'btn-primary'
    = link_to t('helpers.links.cancel'), params[:back_url] || request.referer, :class => 'btn'
