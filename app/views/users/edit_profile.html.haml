%h3= title t('account.profile')

= simple_form_for @profile, :url => user_profile_path, :html => { :class => 'form-horizontal col-md-9' } do |f|
  = f.input :about, input_html: {:rows => 5}, :label => t('user_profile.about_me')
  = f.input :experience, input_html: {:rows => 10}, :label => t('user_profile.experience')
  = f.input :equipment, :hint => t('user_profile.equipment_hint'), input_html: {:rows => 10}, :label => t('user_profile.equipment')
  = f.input :contacts, input_html: {:rows => 5}, :label => t('user_profile.contacts')
  = f.input :private_contacts, :hint => t('user_profile.private_contacts_hint'), input_html: {:rows => 5}, :label => t('user_profile.private_contacts')
  = f.input :private_info, :hint => t('user_profile.private_info_hint'), input_html: {:rows => 5}, :label => t('user_profile.private_info')
  .form-actions
    = f.button :submit, :class => 'btn-primary', :value => t('helpers.links.save')
    = link_to t("helpers.links.cancel"), user_path(current_user), :class => 'btn'